{{setPageTitle "RSVP"}}
{{setActiveNav "rsvp"}}
{{addCSS "/css/rsvp.css"}}

<div class="l-contain">
    <h1>RSVP for Our Wedding</h1>

    <p class="callout">
        To respond to your invitation to our wedding, please follow the special link that came with it.
    </p>

    <h2>Resend Email with Special RSVP Link</h2>

  {{#resent}}
    <p>
      {{#if needsEmail}}
        Please enter your email address.
      {{/if}}

      {{#if notGuest}}
        We do not have your email address (<b>{{notGuest}}</b>). Please email us and weâ€™ll send your special RSVP link: <b><a href="mailto:wedding@danerina.com">wedding@danerina.com</a></b>
      {{/if}}

      {{#if sent}}
        Your special RSVP link has been sent to: <b>{{sent}}</b>
      {{/if}}
    </p>
  {{/resent}}

    <form class="resend l-grid" action="/rsvp/" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrf}}">

        <div class="resend-email l-grid-u">
            <input type="email" name="email" placeholder="Your Email">
        </div>

        <div class="resend-submit l-grid-u">
            <button type="submit">Resend RSVP Link</button>
        </div>
    </form>
</div>
